{
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "none",
  "useTabs": false,
  "importOrder": [
    "tsx/esm",
    "<BUILTIN_MODULES>",
    "<THIRD_PARTY_MODULES>",
    "^@.*/.*$",
    "^#*$",
    "^[./]"
  ],
  "importOrderParserPlugins": [
    "typescript",
    "jsx",
    "decorators",
    "decoratorAutoAccessors"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true,
  "packageSortOrderPreset": "npm-plus",
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss",
    "prettier-plugin-toml",
    "prettier-plugin-sql",
    "prettier-plugin-pkg"
  ],
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 80,
        "proseWrap": "always"
      }
    }
  ],
  "printWidth": 80
}
