{
  "name": "moltbot-sandbox",
  "version": "1.0.0",
  "private": true,
  "description": "Run Moltbot personal AI assistant in a Cloudflare Sandbox",
  "license": "Apache-2.0",
  "author": "",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "build": "vite build",
    "clean:deps": "pnpx rimraf -g node_modules **/node_modules",
    "deploy": "npm run build && wrangler deploy",
    "dev": "vite dev",
    "fmt": "prettier --write src/",
    "fmt:check": "prettier --check src/",
    "lint": "oxlint src/",
    "lint:fix": "oxlint --fix src/",
    "start": "wrangler dev",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "types": "wrangler types"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false,
    "printWidth": 80,
    "importOrder": [
      "<BUILTIN_MODULES>",
      "<THIRD_PARTY_MODULES>",
      "^@.*/.*$",
      "^#*$",
      "^[./]"
    ],
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "decorators",
      "decoratorAutoAccessors"
    ],
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true,
    "packageSortOrderPreset": "npm-plus",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss",
      "prettier-plugin-toml",
      "prettier-plugin-sql",
      "prettier-plugin-pkg"
    ],
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "printWidth": 80,
          "proseWrap": "always"
        }
      }
    ]
  },
  "dependencies": {
    "@cloudflare/puppeteer": "^1.0.6",
    "hono": "^4.11.9",
    "jose": "^6.1.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@cloudflare/sandbox": "^0.7.4",
    "@cloudflare/vite-plugin": "^1.25.0",
    "@cloudflare/workers-types": "^4.20260214.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "prettier": "^3.8.1",
    "prettier-plugin-pkg": "^0.21.2",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-sql": "^0.19.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prettier-plugin-toml": "^2.0.6",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wrangler": "^4.65.0"
  },
  "cloudflare": {
    "bindings": {
      "ANTHROPIC_API_KEY": {
        "description": "Your [Anthropic API key](https://console.anthropic.com/)."
      },
      "MOLTBOT_GATEWAY_TOKEN": {
        "description": "Token for gateway access. Generate with: openssl rand -hex 32"
      }
    }
  }
}
